@page "/oda/ekle"
@page "/oda/duzenle/"



<div class="col-12 col-md-12 col-lg-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Oda Ekle Duzenle
        </CardHeader>
        <CardBody>
            <div class="form-group">
                <label>Oda  Adı</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Kapasitesi(Kişi)</label>
                <input type="text" class="form-control">
            </div>
              <div class="form-group">
                <label>Lokasyon Bilgisi </label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group">
                <label>Eklenme Tarihi</label>
                <input type="datetime-local" class="form-control">
            </div>

            <div class="card-footer text-right">
                <button class="btn btn-success" type="submit">Kaydet</button>
                <button class="btn btn-warning" type="reset">Vazgeç</button>
            </div>
        </CardBody>

    </CardComponent>
</div>

