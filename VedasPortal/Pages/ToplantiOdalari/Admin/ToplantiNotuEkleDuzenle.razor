@page "/toplantinotu/ekle"
@page "/toplantinotu/duzenle/{ToplantiNotId:int}"


@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Environment
@inherits ToplantiNotuModeli


<div class="col-12">
    <EditForm Model="@ToplantiNot" OnValidSubmit="Kayit">
        <DataAnnotationsValidator />
        <CardComponent cardStyle="Style.primary">
            <CardHeader>
                Toplantı Notu @Title
            </CardHeader>
            <CardBody>
                <div class="col-12">
                    <div class="col-md-6 float-left">

                        <div class="form-group row">
                            <label class="form-label col-md-2">Dosya Ekle</label>
                            <div class="col-md-10">
                                <MultipleUpload @bind-ValuePath="@GetDosya" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Not Başlığı</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="ToplantiNot.Baslik" />
                            </div>
                            <ValidationMessage For="@(() => ToplantiNot.Baslik)" />
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Alt Başlık</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="ToplantiNot.AltBaslik" />
                            </div>
                            <ValidationMessage For="@(() => ToplantiNot.AltBaslik)" />
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Kayıt Tarihi</label>
                            <div class="col-md-10">
                                <InputDate class="form-control" @bind-Value="ToplantiNot.KayitTarihi" />
                            </div>
                            <ValidationMessage For="@(() => ToplantiNot.KayitTarihi)" />
                        </div>
                        <div class="form-group row">
                            <label for="Kategori" class="control-label col-md-2">Notu Görecek Birimi Seçin</label>
                            <div class="col-md-10">
                                <InputSelect @bind-Value="@ToplantiNot.Birimler" class="form-control">
                                    <option></option>
                                    @if (Birimler != null)
                                    {
                                        @foreach (var kategori in Birimler)
                                        {
                                            <option value="@kategori.Key"> @kategori.Value </option>
                                        }
                                    }

                                </InputSelect>
                            </div>
                        </div>

                        <br />
                        <div class="row">
                            <div class="form-group row col-md-4">
                                <label class="control-label col-md-8"> Şimdi Yayınlansın Mı?</label>
                                <div class="col-md-4">
                                    <InputCheckbox class="form-control" @bind-Value="ToplantiNot.AktifPasif" />
                                </div>
                                <ValidationMessage For="@(() => ToplantiNot.AktifPasif)" />
                            </div>
                        </div>



                    </div>

                    <div class="col-md-6 float-right">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <CKEditorBlazor Id="MyEditor1"
                                                @bind-Value="@ToplantiNot.Aciklama"
                                                Label="Açıklama ve Alınan Kararlar"
                                                UrlToPostImage="images/uploaded/">
                                </CKEditorBlazor>
                            </div>
                            <ValidationMessage For="@(() => ToplantiNot.Aciklama)" />
                        </div>


                    </div>
                </div>

            </CardBody>

            <CardFotter>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" @onclick="Kayit">Kaydet</button>
                    <button class="btn btn-danger" type="reset" @onclick="Temizle">Tümünü Temizle</button>
                </div>
            </CardFotter>
        </CardComponent>
    </EditForm>
</div>


@if (ToplantiNotlari == null)

{
    <p><em>Yükleniyor...</em></p>
}

else

{

    <div class="col-12">

        <CardComponent cardStyle="Style.primary">

            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        Toplantı Odaları
                    </div>
                </div>

            </CardHeader>
            <CardBody>
                <div class="table-responsive">
                    <table class="table table-striped" id="table-2">
                        <thead>
                            <tr>
                                <th class="text-center pt-3">
                                    <div class="custom-checkbox custom-checkbox-table custom-control">
                                        <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                               class="custom-control-input" id="checkbox-all">
                                        <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                    </div>
                                </th>
                                <th>Oda Adı</th>
                                <th> Durumu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var toplantiNotu in ToplantiNotlari)

                            {
                                <tr>
                                    <td class="text-center pt-2">
                                        <div class="custom-checkbox custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                                                   id="checkbox-1">
                                            <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </td>
                                    <td>@toplantiNotu.Baslik</td>
                                    <td>
                                        @if (toplantiNotu.AktifPasif == true)
                                        {


                                            <div class="badge badge-success badge-shadow">Aktif, Kullanımda</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-warning badge-shadow">Pasif, Kullanımda Değil</div>}
                                    </td>

                                    <td>
                                        <a href="@($"toplantinotdetayi/{toplantiNotu.Id}")" class="btn btn-primary">Not Detayı</a>
                                        <a href='/toplantinotu/duzenle/@toplantiNotu.Id' class="btn btn-info btn-outline-dark" role="button">Düzenle</a>
                                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteEmpModal"
                                                @onclick="@(() => {DialogGorunur="block"; SilmeyiOnayla(toplantiNotu.Id);})">
                                            Sil
                                        </button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>

            </CardBody>
        </CardComponent>

    </div>


    <ModalComponent @ref="ModalDialog">
        <ModalHeader>
            <h5>Bu veriyi silmek istediğinize emin misiniz ??</h5>
        </ModalHeader>

        <ModalFooter>
            <button class="btn btn-danger" @onclick="@(()=>{Sil(); ModalDialog.Close();})">Evet</button>
            <button class="btn btn-warning" @onclick="@(()=>{ModalDialog.Close();})">Hayır</button>
        </ModalFooter>
    </ModalComponent>

}


<style>
    .modal-content {
        max-width: 100%;
        border: none;
        margin-top: 200px;
        box-shadow: 0 3px 8px rgb(0 0 0 / 5%);
    }

    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>