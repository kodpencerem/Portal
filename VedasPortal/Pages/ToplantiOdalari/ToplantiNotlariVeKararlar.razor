@page "/ToplantiNotlariVeKararlar"
@inherits ToplantiNotlariVeKararlarModeli


@if (NotlarVeKararlar == null)

{
<p><em>Yükleniyor...</em></p> }

else

{
<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Toplantı Notları ve Alınan Kararlar
                </div>
            </div>
            <div style="margin-left:920px" 
                 class="float-right">
                <input style="border-radius: 5px; border-color: #6777ef" 
                       placeholder="Aramanızı bu alanda yapın..." />
                <button class="btn btn-primary">Ara</button>
            </div>
        </CardHeader>
        <CardBody>
            <div class="row">
                @foreach (var toplantiNotKarar in NotlarVeKararlar)
                {
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="card">
                            <div class="card-statistic-4">
                                <div class="align-items-center justify-content-between">
                                    <div class="row ">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pr-0 pt-3">
                                            <div class="card-content">
                                                <h5 class="font-15">
                                                    Toplatı Adı : 
                                                    @toplantiNotKarar.Baslik
                                                </h5>
                                                <h2 class="mb-3 font-18">Yapıldığı Tarih : @toplantiNotKarar.KayitTarihi</h2>
                                                <h2 class="mb-3 font-18">Toplantı Konusu :  : @toplantiNotKarar.Konu</h2>
                                                <a href="toplantinotdetayi/@toplantiNotKarar.Id" class="btn btn-primary">İncele</a>
                                            </div>
                                        </div>
                                        <div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 pl-0">
                                            <div class="banner-img">
                                                <img src="assets/img/banner/1.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                  }
            </div>

        </CardBody>
    </CardComponent>
</div>}


<style>
    .article .article-details {
        min-height: 310px;
        max-height: 310px;
    }

    .theme-white .btn-primary {
        margin-left: 8rem;
        background-color: #6777ef;
        border-color: transparent !important;
        color: #fff;
    }

    .card .card-footer {
        background-color: transparent;
        border: none;
        margin-top: -3rem;
    }
</style>

