@page "/personel/ekle"
@page "/personel/duzenle/"

<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Yeni İşe Başlayan Ekle
                </div>
            </div>
        </CardHeader>
        <CardBody>
            <div class="form-group row">
                <label class="control-label col-md-12">Resim</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Adı Soyadı</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Doğum Tarihi</label>
                <div class="col-md-12">
                    <input type="datetime-local" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-12">Telefon No</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">E-Posta </label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Adresi</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Başladığı Görev</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">İşe Giriş Tarihi</label>
                <div class="col-md-12">
                    <input type="datetime-local" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Temsilcilik Adı</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Birimi</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>


            <div class="form-group">
                <SaveButton Caption="Kaydet"></SaveButton>
                <CancelButton Caption="Vazgeç"></CancelButton>
            </div>
        </CardBody>
    </CardComponent>
</div>
<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>