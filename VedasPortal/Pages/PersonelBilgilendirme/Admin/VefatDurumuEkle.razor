@page "/vefat/ekle"
@page "/vefat/duzenle/"

<div class="col-12 col-md-12 col-lg-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Vefat Durumu Ekle/Düzenle
        </CardHeader>
        <CardBody>

            <div class="form-group row">
                <label class="control-label col-md-12">Resim Ekle</label>
                <div class="col-md-12">
                    <MultipleUpload></MultipleUpload>
                </div>
            </div>

            <div class="form-group">
                <label>Personel Adı ve Soyadı</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group row">
                <label class="control-label col-md-12">Vefat Edenin Personele Yakınlık Derecesi</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label>Personel İletişim Bilgisi</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group">
                <label>Vefat Tarihi</label>
                <input type="datetime-local" class="form-control">
            </div>

            <div class="card-footer text-right">
                <button class="btn btn-success" type="submit">Kaydet</button>
                <button class="btn btn-warning" type="reset">Vazgeç</button>
            </div>
        </CardBody>

    </CardComponent>
</div>
<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>