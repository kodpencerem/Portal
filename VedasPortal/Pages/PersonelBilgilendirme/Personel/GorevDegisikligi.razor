@page "/gorevdegisiklikleri"
@inherits GorevDegisiklikModeli

@if (GorevDegisiklikDurumlari == null)

{
    <p><em>Yükleniyor...</em></p>
}

else

{

    <div class="col-12">
        <CardComponent cardStyle="Style.primary">
            <CardHeader>
                Görev Yeri ve Görevi Değişen Personeller
            </CardHeader>
            <CardBody>
                <div class="row">
                    @foreach (var katilis in GorevDegisiklikDurumlari.Where(h => h.PersonelDurumu == PersonelDurumu.GorevDegisikligi &&
                       h.AktifPasif == true))
                    {
                        <div style="margin-top:-15px" class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
                            <CardComponent cardStyle="Style.primary">
                                <CardBody>
                                    <div class="author-box-center align-center">
                                        <img width="200"
                                             height="200"
                                             alt="image"
                                             src="images/uploaded/@string.Concat(
                                               katilis.ImageFile.FirstOrDefault().Adi,
                                               ".",
                                               katilis.ImageFile.FirstOrDefault().Uzanti)"
                                             class="rounded-circle author-box-picture">
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="author-box-details">
                                        <h5 style="color:darkblue" class="text-center">
                                            <br />
                                            <strong>
                                                VEDAŞ AİLESİNİN DEĞERLİ ÇALIŞANLARI
                                            </strong>
                                        </h5>
                                        <div class="author-box-description">
                                            <h6 style="color:darkblue" class="text-center">
                                                Sayın <strong style="color:blue">
                                                    @katilis.AdSoyad, @katilis.TemsilcilikAdi'nde @katilis.BasladigiGorev
                                                    Olarak Yürüttüğü Görevinden @katilis.IsDegisiklikTarihi.Date.ToShortDateString()
                                                </strong> Tarihinden İtibaren <strong style="color:blue">
                                                    @katilis.GorevDegisikligi&nbsp;
                                                </strong>olarak devam edecektir <strong style="color:blue">
                                                </strong><br />
                                                Yeni Görevinizde Başarılar Dileriz.
                                            </h6>
                                        </div>

                                        <div class="float-right mt-sm-0 mt-3">
                                            <a href="Profil/@katilis.Id" class="btn">Personel Detay Bilgileri<i class="fas fa-chevron-right"></i></a>
                                        </div>
                                    </div>
                                </CardBody>
                            </CardComponent>
                        </div>
                    }
                </div>

            </CardBody>
        </CardComponent>
    </div>
}


<style>
    .article .article-details {
        min-height: 220px;
        max-height: 290px;
    }

    .theme-white .btn-primary {
        margin-left: 8rem;
        background-color: #6777ef;
        border-color: transparent !important;
        color: #fff;
    }
</style>

