@page "/etkinlik/detay/{etkinlikId:int}"

<div class="container">
    <div class="card">
        <div class="container-fliud">
            @{
                if (EtkinlikDurum != null)
                {
                    <div class="wrapper row">  
                        <div class="preview col-md-6">

                            <div class="preview-pic tab-content">
                                <div class="tab-pane active" id="pic-1"><img src="@EtkinlikDurum.EtkinlikResmi" /></div>
                                <div class="tab-pane" id="pic-2"><img src="@EtkinlikDurum.EtkinlikResmi" /></div>
                                <div class="tab-pane" id="pic-3"><img src="@EtkinlikDurum.EtkinlikResmi" /></div>
                                <div class="tab-pane" id="pic-4"><img src="@EtkinlikDurum.EtkinlikResmi" /></div>
                                <div class="tab-pane" id="pic-5"><img src="@EtkinlikDurum.EtkinlikResmi" /></div>
                            </div>
                            <ul class="preview-thumbnail nav nav-tabs">
                                <li class="active">
                                    <a data-target="#pic-1" data-toggle="tab">
                                        <img src="@EtkinlikDurum.EtkinlikResmi" />
                                    </a>
                                </li>
                                <li><a data-target="#pic-2" data-toggle="tab"><img src="@EtkinlikDurum.EtkinlikResmi" /></a></li>
                                <li><a data-target="#pic-3" data-toggle="tab"><img src="@EtkinlikDurum.EtkinlikResmi" /></a></li>
                                <li><a data-target="#pic-4" data-toggle="tab"><img src="@EtkinlikDurum.EtkinlikResmi" /></a></li>
                                <li><a data-target="#pic-5" data-toggle="tab"><img src="@EtkinlikDurum.EtkinlikResmi" /></a></li>
                            </ul>

                        </div>
                        <div class="details col-md-6">
                            <h3 class="product-title">@EtkinlikDurum.EtkinlikAdi</h3>
                            <div class="rating">
                                <div class="stars">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <span class="review-no">41 reviews</span>
                            </div>
                            <p class="product-description">Suspendisse quos? Tempus cras iure temporibus? Eu laudantium cubilia sem sem! Repudiandae et! Massa senectus enim minim sociosqu delectus posuere.</p>
                            <h4 class="price">current price: <span>$180</span></h4>
                            <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                            
                            <div class="action">
                                
                                <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
    <div class="mt-3 text-center">
        <a class="btn btn-primary" href="etkinlikler">
            <i class="fas fa-arrow-left"></i> Etkinlikler
        </a>
    </div>
</div>


