@page "/etkinlik/detay/{EtkinlikId:int}"

@using System;
@using System.Collections.Generic;
<div class="col-12">
	<CardComponent cardStyle="Style.primary">
		<CardBody>
			<div class="container-fliud">
				@{
					if (etkinlik != null)
					{
						<div class="wrapper row">
							<div class="preview col-lg-4 col-sm-12 col-md-6 col-xs-12">

								<div class="preview-pic tab-content">
									<div class="tab-pane active"
								 	id="pic-1">
										<img src="images/uploaded/@string.Concat(etkinlik.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               etkinlik.Dosya?.FirstOrDefault().Uzanti)"
									 	width="484"
									 	alt="@etkinlik.Adi" />
									</div>


									<div class="tab-pane" id="pic-2">
										<img src="images/uploaded/@string.Concat(etkinlik.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               etkinlik.Dosya?.FirstOrDefault().Uzanti)"
									 	width="484"
									 	alt="@etkinlik.Dosya?.FirstOrDefault().Adi" />
									</div>




								</div>
								<ul class="preview-thumbnail nav nav-tabs">
									<li class="active">
										<a data-target="#pic-1" data-toggle="tab">
											<img src="images/uploaded/@string.Concat(etkinlik.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               etkinlik.Dosya?.FirstOrDefault().Uzanti)"
										 	width="76"
										 	alt="@etkinlik.Adi" />
										</a>
									</li>


									<li>
										<a data-target="#pic-2" data-toggle="tab">
											<img src="images/uploaded/@string.Concat(etkinlik.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               etkinlik.Dosya?.FirstOrDefault()?.Uzanti)"
										 	width="76"
										 	alt="@etkinlik.Dosya?.FirstOrDefault().Adi" />
										</a>
									</li>



								</ul>

							</div>
							<div class="details col-lg-8 col-sm-12 col-md-6 col-xs-12">
								<h3 class="product-title">@etkinlik.Adi</h3>
								<Rating Color="Color.Primary" @bind-SelectedValue="@etkinlik.BegeniDerecesi" MaxValue="5" />
								<br>
								<p class="blazor-modal-content">@((MarkupString) etkinlik.Aciklama)</p>

								@*<p class="vote"><strong>@etkinlik.BegeniYuzdesi%</strong> personel bu yayını beğendi <strong>(@etkinlik.BegeniSayisi Beğeni)</strong></p>*@

								<div class="action">

									<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
								</div>
							</div>
						</div>
					}
				}

			</div>


		</CardBody>

		<CardFotter>
			<div class="mt-3 text-center">
				<a class="btn btn-primary" href="etkinlikler">
					<i class="fas fa-arrow-left"></i> Etkinlikler
				</a>
			</div>

		</CardFotter>
	</CardComponent>

</div>


<style>
	.row {
		display: -ms-flexbox;
		display: -webkit-box;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		margin-top: -15px;
		margin-right: -15px;
		margin-left: -15px;
	}
</style>
