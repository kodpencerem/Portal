@page "/etkinlik/detay/{EtkinlikId:int}"

@using System;
@using System.Collections.Generic;
<div class="col-12">
	<CardComponent cardStyle="Style.primary">
        <CardBody>
            <div class="container-fliud">
                @{
                    if (etkinlik != null)
                    {
                        <div class="row">
                            <div class="preview col-lg-4 col-sm-12 col-md-6 col-xs-12">
                                <div id="aniimated-thumbnials" class="list-unstyled row clearfix">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <a href="images/uploaded/@string.Concat(etkinlik.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               etkinlik.Dosya?.FirstOrDefault().Uzanti)" data-sub-html="@etkinlik.Adi">
                                            <img class="img-responsive thumbnail" src="images/uploaded/@string.Concat(etkinlik.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               etkinlik.Dosya?.FirstOrDefault().Uzanti)" alt="">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="details col-lg-8 col-sm-12 col-md-6 col-xs-12">
                                <h3 class="product-title">@etkinlik.Adi</h3>

                                <p class="haber-detay">@((MarkupString)etkinlik.Aciklama)</p>

                            </div>
                        </div>
                    }
                }

            </div>


        </CardBody>

		<CardFotter>
			<div class="mt-3 text-center">
				<a class="btn btn-primary" href="etkinlikler">
					<i class="fas fa-arrow-left"></i> Etkinlikler
				</a>
			</div>

		</CardFotter>
	</CardComponent>

</div>


<style>
	.row {
		display: -ms-flexbox;
		display: -webkit-box;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		margin-top: -15px;
		margin-right: -15px;
		margin-left: -15px;
	}
</style>
