@page "/"
@page "/index"


    <div class="col-lg-8 col-sm-12 col-md-6 col-xs-12">
        <SliderBox />
    </div>

    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">

        <DovizKarti />

        <HavaDurumKarti style="float:left"
                        Sehir="Ankara"
                        HavadurumuBackground="BackgroundColor.orange" />
        <HavaDurumKarti style="float:left"
                        Sehir="Van"
                        HavadurumuBackground="BackgroundColor.cyan" />
        <HavaDurumKarti style="float:left"
                        Sehir="Bitlis"
                        HavadurumuBackground="BackgroundColor.cyan" />
        <HavaDurumKarti style="float:left"
                        Sehir="Hakkari"
                        HavadurumuBackground="BackgroundColor.orange" />
    </div>
    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <Duyurular />
    </div>
    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <Haberler />
    </div>
    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <Etkinlikler />
    </div>
    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <CardComponent cardStyle="Style.info">
            <CardBody>
                <header class="bg-white w-100">
                    <div class="container">
                        <div class="row px-5 justify-content-center">
                            <div class="col-lg-12">
                                <div class="text-center my-5">
                                    <h5 class="display-5 fw-bolder text-dark mb-4">
                                        Anketlere katılın ve sonuçlarınızı şirketimizde bulunan insanlarla karşılaştırın...
                                    </h5>
                                    <p class="lead text-black-50 mb-4">
                                        Listede bulunan anketlerden birine katıl veya sonuçları görüntülemek için seç.
                                    </p>
                                    <div class="d-flex justify-content-center">
                                        <NavLink class="btn btn-primary btn-lg mr-4"
                                                 @onclick="ViewSurveys">
                                            Anketler
                                        </NavLink>
                                        <NavLink class="btn btn-info btn-lg"
                                                 @onclick="TakeRandomSurvey">
                                            Rastgele anket getir!
                                        </NavLink>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>
            </CardBody>
        </CardComponent>
    </div>

    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <SecilmisAnket />
    </div>

    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <PersonelDurumComponent />
    </div>

    <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
        <YaklasanToplanti />
    </div>