<hr />

<section style="margin-left:5px" class="container">


	<div class="form-group row">
		<label class="control-label col-md-12">Resim</label>
		<div class="col-md-4">
			<text class="form-control" />
		</div>
	</div>

	<div class="form-group row">
		<label class="control-label col-md-12">Etkinlik Adı</label>
		<div class="col-md-4">
			<text class="form-control" />
		</div>
	</div>

	<div class="form-group row">
		<label class="control-label col-md-12">Açıklama</label>
		<div class="col-md-4">
			<text class="form-control" />
		</div>
	</div>


