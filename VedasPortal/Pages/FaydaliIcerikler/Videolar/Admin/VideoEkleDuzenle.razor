@page "/video/ekle"
@page "/video/duzenle/"

<div class="col-12 col-md-12 col-lg-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Video Ekle/Düzenle
        </CardHeader>
        <CardBody>
            <div class="form-group">
                <label class="control-label col-md-12">Video Ekle</label>
                <MultipleUpload></MultipleUpload>
            </div>
            <div class="form-group">
                <label class="control-label col-md-12">Video Başlığı</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label col-md-12">Video Yolu</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group">
                <label class="control-label col-md-12">Detaylı Açıklama</label>
                <Summernote></Summernote>
            </div>
            <div class="float-left">
                <div class="float-left">
                    <div class="form-group col-md-12">
                        <label>Videoyu Ekleyen Birim</label>
                        <select class="form-control">
                            <option>Scada</option>
                            <option>İnsan Kaynakları</option>
                            <option>Bilgi İşlem</option>
                            <option>Hukuk</option>
                        </select>
                    </div>
                </div>

                <div class="float-right">
                    <div class="form-group col-md-12">
                        <label>Videoyu Görecek Birimler</label>
                        <select class="form-control">
                            <option>Tüm Birimler</option>
                            <option>İnsan Kaynakları</option>
                            <option>Bilgi İşlem</option>
                            <option>Hukuk</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button class="btn btn-success" type="submit">Kaydet</button>
                <button class="btn btn-warning" type="reset">Vazgeç</button>
            </div>
        </CardBody>

    </CardComponent>
</div>

<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>