@page "/Videolar"
@inherits VideoModeli

@if (VideoGetir == null)

{
    <p><em>Yükleniyor...</em></p>
}

else

{
    <div class="col-12">
        <CardComponent cardStyle="Style.primary">
            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        Eğitim Portalı
                    </div>
                </div>
                <div style="margin-left:1180px" class="float-right">
                    <div class="text-center bg-blue-100">
                        <input class="form-control" @bind-value="SearchText"
                               @bind-value:event="oninput" placeholder="Bu alanda arama yapın..." />
                    </div>
                </div>
            </CardHeader>
            <CardBody>
                <div class="row">
                    @if (!VideoGetir.Any())
                    {
                        <p>İçerik Aranıyor</p>
                    }
                    else
                    {
                        @foreach (var video in FilteredVideo.Where(x=>x.AktifPasif==true).ToList())
                        {
                            <div class="col-lg-4 col-sm-12 col-md-6 col-xs-12">
                                <VideoPlayerComponent VideoBaslik="@video.Baslik"
                                                      Aciklama="@video.Aciklama"
                                                      Width="500px"
                                                      Heigth="500px" />
                            </div>

                        }
                    }

                </div>
            </CardBody>
        </CardComponent>

    </div>


}


<style>

    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>

