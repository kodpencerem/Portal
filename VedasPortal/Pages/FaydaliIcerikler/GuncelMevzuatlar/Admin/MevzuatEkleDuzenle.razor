@page "/mevzuat/ekle"
@page "/mevzuat/duzenle/"

<div class="col-12 col-md-12 col-lg-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Mevzuat Ekle/Düzenle
        </CardHeader>
        <CardBody>
            <div class="form-group">
                <label class="control-label col-md-12">Resim/Video/Döküman Ekle</label>
                <MultipleUpload></MultipleUpload>
            </div>
            <div class="form-group">
                <label class="control-label col-md-12">Mevzuat Adı</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label col-md-12">Detaylı Açıklama</label>
                <Summernote></Summernote>
            </div>
            <div class="form-group">
                <label>Başlangıç Tarihi</label>
                <input type="datetime-local" class="form-control col-md-4">
            </div>
            <div class="form-group">
                <label>Bitiş Tarihi</label>
                <input type="datetime-local" class="form-control col-md-4">
            </div>
            <div class="form-group col-md-4">
                <label>Mevzuatı Görecek Birimler</label>
                <select class="form-control">
                    <option>Tüm Birimler</option>
                    <option>İnsan Kaynakları</option>
                    <option>Bilgi İşlem</option>
                    <option>Hukuk</option>
                </select>
            </div>
            <div class="card-footer text-right">
                <SaveButton></SaveButton>
                <CancelButton></CancelButton>
            </div>
        </CardBody>

    </CardComponent>
</div>
<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>