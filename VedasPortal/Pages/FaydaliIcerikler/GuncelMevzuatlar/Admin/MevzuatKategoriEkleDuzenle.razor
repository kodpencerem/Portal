@page "/mevzuatkategori/ekle"
@page "/mevzuatkategori/duzenle/"

<div class="col-12 col-md-12 col-lg-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Mevzuat Kategorisi Ekle/Düzenle
        </CardHeader>
        <CardBody>
            <div class="form-group">
                <label>Mevzuat Kategorisi Adı</label>
                <input type="text" class="form-control">
            </div>


            <div class="form-group">
                <label>Açıklama Metni</label>
                <Summernote></Summernote>
            </div>

            <div class="form-group">
                <label>Mevzuat Kategorisi Durumu</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group">
                <label>Eklenme Tarihi</label>
                <input type="datetime-local" class="form-control">
            </div>

            <div class="card-footer text-right">
                <SaveButton></SaveButton>
                <CancelButton></CancelButton>
            </div>
        </CardBody>

    </CardComponent>
</div>