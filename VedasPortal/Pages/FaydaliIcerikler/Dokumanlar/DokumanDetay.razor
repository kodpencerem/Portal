@page "/dosya/detay/{dosyaId:int}"

<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Döküman Detay Bilgileri
                </div>
            </div>

        </CardHeader>
        <CardBody>
            @if (GetDosya != null)
            {

                <div class="boxs mail_listing">
                    <div class="inbox-body no-pad">
                        <section class="mail-list">
                            <div class="mail-sender">
                                <div style="margin-top:-5px" 
                                     class="mail-heading">
                                    <h4 class="vew-mail-header">
                                        <b>@GetDosya.Adi</b>
                                    </h4>
                                </div>
                                <hr>
                                <div class="media">
                                    <a href="#" class="table-img m-r-15">
                                        <img alt="image" 
                                             src="images/uploaded/@GetDosya.Yolu" 
                                             class="rounded-circle" 
                                             width="35"
                                             data-toggle="tooltip" 
                                             title="Sachin Pandit">
                                    </a>
                                    <div class="media-body">
                                        <span class="date pull-right">@GetDosya.KayitTarihi</span>
                                        <h5 class="text-primary">@GetDosya.KaydedenKullanici</h5>
                                        <small class="text-muted">From: sarah@example.com</small>
                                    </div>
                                </div>
                            </div>
                            <div class="view-mail p-t-20">
                                <p>
                                    @((MarkupString) GetDosya.Aciklama)
                                </p>

                            </div>
                            <div class="attachment-mail">
                                <p>
                                    <span>
                                        <i class="fa fa-paperclip"></i> Ek Döküman Sayısı —
                                    </span>
                                    <a href="#">Tüm Ekleri İndir</a> |
                                    <a href="#">Ekleri Görüntüle</a>
                                </p>
                                <div class="row">
                                    <div class="col-md-2">
                                        <a href="#">
                                            <img class="img-thumbnail img-responsive" alt="attachment"
                                                 src="images/uploaded/@GetDosya.Yolu">
                                        </a>
                                        <a class="name" href="#">
                                            @GetDosya.Adi
                                            <span>@GetDosya.Boyutu</span>
                                        </a>
                                    </div>


                                </div>
                            </div>

                        </section>
                    </div>
                </div>

            }
        </CardBody>
    </CardComponent>
</div>



<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }

    .card .card-body {
        padding-top: 0px;
        padding-bottom: 20px;
    }
</style>