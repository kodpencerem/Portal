@page "/dosyalar"

@inherits DosyaModeli


@if (Dokumanlar == null)

{
    <p><em>Yükleniyor...</em></p> }

else

{

    <div class="col-12">
        <CardComponent cardStyle="Style.primary">

            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        İndirilebilir Dosyalar ve Dökümanlar
                    </div>
                </div>
                <div style="margin-left:1100px" class="float-right">
                    <div class="text-center bg-blue-100">
                        <input class="form-control" @bind-value="SearchText"
                               @bind-value:event="oninput" placeholder="Bu alanda arama yapın..." />
                    </div>
                </div>
            </CardHeader>


            <CardBody>

                <div class="row">
                    @if (!Dokumanlar.Any())
                    {
                        <p>İçerik Aranıyor</p>
                    }
                    else
                    {
                        <DownloadComponent/>
                    }
                </div>
            </CardBody>
        </CardComponent>

    </div>}
<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>

