@page "/dosyalar"
@using Syncfusion.Blazor.FileManager
@inject IJSRuntime JsRuntime;

<div class="col-12">
    <AuthorizeView>
        <Authorized>
            <CardComponent cardStyle="Style.primary">
                <CardBody>
                    <div id="ControlRegion">

                        <SfFileManager TValue="FileManagerDirectoryContent"
                                       ShowThumbnail="true"
                                       AllowDragAndDrop="true"
                                       AllowMultiSelection="true">

                            <FileManagerAjaxSettings Url="/api/FileManager/FileOperations"
                                                     UploadUrl="/api/FileManager/Upload"
                                                     DownloadUrl="/api/FileManager/Download"
                                                     GetImageUrl="/api/FileManager/GetImage">
                            </FileManagerAjaxSettings>
                            <FileManagerToolbarSettings Items="@ItemToolbar"></FileManagerToolbarSettings>
                            <FileManagerContextMenuSettings File="@Items" Folder="@Items"></FileManagerContextMenuSettings>
                        </SfFileManager>
                    </div>

                </CardBody>
            </CardComponent>
        </Authorized>
        <NotAuthorized>
            <p class="text text-center text-danger"> Giriş Yapmadınız!</p>
        </NotAuthorized>
    </AuthorizeView>
    
</div>

@code{

    public string[] Items = new string[] { "Open", "|", "Download","|", "Details" };

    public string[] ItemToolbar = new string[] { "Download", "SortBy", "Refresh", "Selection", "View", "Details" };
}

