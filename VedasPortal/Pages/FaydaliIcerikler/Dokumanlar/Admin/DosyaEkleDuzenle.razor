@page "/dosya/ekle"
@page "/dosya/duzenle"


<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Dosya Döküman Ekleme Düzenleme Formu
        </CardHeader>
        <CardBody >
            <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Dosya Adı</label>
                <div class="col-sm-12 col-md-7">
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Kategorisi</label>
                <div class="col-sm-12 col-md-7">
                    <select class="form-control selectric">
                        <option>Ticari Kalite</option>
                        <option>Mevzuat</option>
                        <option>Şirket Politikası</option>
                    </select>
                </div>
            </div>
            <Summernote></Summernote>
            <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Resim/Döküman</label>
                <div class="col-sm-12 col-md-7">
                    <div id="image-preview" class="image-preview">
                        <label for="image-upload" id="image-label">Dosya Seçin</label>
                        <input type="file" name="image" id="image-upload" />
                    </div>
                </div>
            </div>
            <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Dosya Boyutu</label>
                <div class="col-sm-12 col-md-7">
                    <input type="text" class="form-control inputtags">
                </div>
            </div>
            <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Görecek Birim Ya da Yönetici</label>
                <div class="col-sm-12 col-md-7">
                    <select class="form-control selectric">
                        <option>Genel Müdürler</option>
                        <option>Tüm Birimler</option>
                        <option>Saha Birimleri</option>
                    </select>
                </div>
            </div>
            <div class="form-group row mb-4">
                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                <div class="col-sm-12 col-md-7">
                    <SaveButton></SaveButton>
                    <CancelButton></CancelButton>
                </div>
            </div>
        </CardBody>
    </CardComponent>
</div>
