@page "/egitimdetayi"
<h3>Eğitim Detayı</h3>


<section class="section">
	<div class="section-body">
		<div class="row mt-sm-4">
			<div class="col-12 col-md-12 col-lg-4">
				<div class="card author-box">
					<div class="card-body">
						<div class="author-box-center">
							<img alt="image" src="assets/img/users/user-1.png" class="rounded-circle author-box-picture">
							<div class="clearfix"></div>
							<div class="author-box-name">
								<a href="#">Sarah Smith</a>
							</div>
							<div class="author-box-job">Web Tasarım Uzmanı</div>
						</div>
						<div class="text-center">
							<div class="author-box-description">
								<p>
									Eğitmen hakkında kısa bilgi
								</p>
							</div>
							<div class="w-100 d-sm-none"></div>
						</div>
					</div>
				</div>
				<div class="card">
					<div class="card-header">
						<h4>Eğitmen Bilgileri</h4>
					</div>
					<div class="card-body">
						<div class="py-4">
							<p class="clearfix">
								<span class="float-left">
									Doğum Tarihi
								</span>
								<span class="float-right text-muted">
									30-05-1998
								</span>
							</p>
							<p class="clearfix">
								<span class="float-left">
									Telefon No
								</span>
								<span class="float-right text-muted">
									(0123)123456789
								</span>
							</p>
							<p class="clearfix">
								<span class="float-left">
									Mail
								</span>
								<span class="float-right text-muted">
									test@example.com
								</span>
							</p>
							<p class="clearfix">
								<span class="float-left">
									Facebook
								</span>
								<span class="float-right text-muted">
									<a href="#">John Deo</a>
								</span>
							</p>
							<p class="clearfix">
								<span class="float-left">
									Twitter
								</span>
								<span class="float-right text-muted">
									<a href="#">johndeo</a>
								</span>
							</p>
						</div>
					</div>
				</div>
				<div class="card">
					<div class="card-header">
						<h4>Nitelik ve Uzmanlık Bilgileri</h4>
					</div>
					<div class="card-body">
						<ul class="list-unstyled user-progress list-unstyled-border list-unstyled-noborder">
							<li class="media">
								<div class="media-body">
									<div class="media-title">C# Programlama</div>
								</div>
								<div class="media-progressbar p-t-10">
									<div class="progress" data-height="6" style="height: 6px;">
										<div class="progress-bar bg-primary" data-width="70%" style="width: 70%;"></div>
									</div>
								</div>
							</li>
							<li class="media">
								<div class="media-body">
									<div class="media-title">Web Tasarım</div>
								</div>
								<div class="media-progressbar p-t-10">
									<div class="progress" data-height="6" style="height: 6px;">
										<div class="progress-bar bg-warning" data-width="80%" style="width: 80%;"></div>
									</div>
								</div>
							</li>
							<li class="media">
								<div class="media-body">
									<div class="media-title">Photoshop Kullanım</div>
								</div>
								<div class="media-progressbar p-t-10">
									<div class="progress" data-height="6" style="height: 6px;">
										<div class="progress-bar bg-green" data-width="48%" style="width: 48%;"></div>
									</div>
								</div>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-12 col-lg-8">
				<div class="card">
					<div class="padding-20">
						<ul class="nav nav-tabs" id="myTab2" role="tablist">
							<li class="nav-item">
								<a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab" aria-selected="true">Eğitim Hakkında</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="profile-tab2" data-toggle="tab" href="#settings" role="tab" aria-selected="false">Video İçerikleri</a>
							</li>
						</ul>
						<div class="tab-content tab-bordered" id="myTab3Content">
							<div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">

								<p class="m-t-30">
									Eğitim Adı
								</p>
								<p>
									Açıklama
								</p>

								<div class="section-title">Konular</div>
								<ul>
									<li>Konu Adı</li>
									<li>Konu Adı</li>
									<li>Konu Adı</li>
								</ul>
								<div class="section-title">Eğitime Başlamak İçin Gerekli Nitelikler</div>
								<ul>
									<li>
										Başlangıç Düzeyinde C#
									</li>
									<li>
										Temel düzeyde html&css bilgisi
									</li>
									<li>
										Google harita bilgisi
									</li>


								</ul>
							</div>
							<div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab2">
								<form method="post" class="needs-validation">
									<div class="card-header">
										<h4>Oynatma Listesi</h4>
									</div>
									<div class="card-body">
										<video width="320" height="240" controls>
											<source src="http://techslides.com/demos/sample-videos/small.ogv" type=video/ogg>
											<source src="/build/videos/arcnet.io(7-sec).mp4" type=video/mp4>
										</video>

									</div>
									<div class="card-footer text-right">
										<button class="btn btn-primary">Eğitime Kaydol</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



















