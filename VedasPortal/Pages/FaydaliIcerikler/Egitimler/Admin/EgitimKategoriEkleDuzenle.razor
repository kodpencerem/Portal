@page "/egitimkategori/ekle"
@page "/egitimkategori/duzenle/"


<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Eğitim Kategori Ekle Duzenle

                </div>
            </div>

        </CardHeader>

        <CardBody>
            <div class="form-group">
                <label class="control-label col-md-12">Eğitim Kategori Adı</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12">Açıklama</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12">Eğitim Kategori Durumu</label>
                <div class="col-md-12">
                    <input class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">Kaydet</button>
                <button class="btn btn-warning" type="reset">Vazgeç</button>
            </div>
        </CardBody>

    </CardComponent>

</div>




