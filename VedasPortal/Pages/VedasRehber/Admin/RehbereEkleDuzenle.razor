@page "/rehber/ekle"
@page "/rehber/duzenle/{rehberId:int}"


@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Environment
@inherits RehberModeli


<div class="col-12">
    <EditForm Model="@rehber" OnValidSubmit="Kayit">
        <DataAnnotationsValidator />
        <CardComponent cardStyle="Style.primary">
            <CardHeader>
                Rehber @Title
            </CardHeader>
            <CardBody>



                <div class="col-12">
                    <div class="col-md-6 float-left">
                        <div class="form-group row">
                            <label class="form-label col-md-2">Resim Seçin</label>
                            <div class="col-md-10">
                                <ImageResizer @bind-Value="@RehberDosya" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Personel Adı</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="rehber.Adi" />
                            </div>
                            <ValidationMessage For="@(() => rehber.Adi)" />
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Soyadı</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="rehber.Soyadi" />
                            </div>
                            <ValidationMessage For="@(() => rehber.Soyadi)" />
                        </div>
                        <div class="form-group row">
                            <label class="control-label col-md-2">Unvanı</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="rehber.Unvani" />
                            </div>
                            <ValidationMessage For="@(() => rehber.Unvani)" />
                        </div>



                        <div class="form-group row">
                            <label class="control-label col-md-2">Email</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="rehber.Email" />
                            </div>
                            <ValidationMessage For="@(() => rehber.Email)" />
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Telefon No</label>
                            <div class="col-md-10">
                                <InputNumber class="form-control" @bind-Value="rehber.TelefonNo" />
                            </div>
                            <ValidationMessage For="@(() => rehber.TelefonNo)" />
                        </div>


                        <div class="form-group row">
                            <label class="control-label col-md-2">Kaydeden Personel</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="rehber.KaydedenKullanici" />
                            </div>
                            <ValidationMessage For="@(() => rehber.KaydedenKullanici)" />
                        </div>
                    </div>
                </div>
            </CardBody>

            <CardFotter>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" @onclick="Kayit">Kaydet</button>
                    <button class="btn btn-danger" type="reset" @onclick="Temizle">Tümünü Temizle</button>
                </div>
            </CardFotter>
        </CardComponent>
    </EditForm>
</div>


@if (Rehber == null)

{
    <p><em>Yükleniyor...</em></p>
}

else

{

    <div class="col-12">

        <CardComponent cardStyle="Style.primary">

            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        Rehber
                    </div>
                </div>

            </CardHeader>
            <CardBody>
                <div class="table-responsive">
                    <table class="table table-striped" id="table-2">
                        <thead>
                            <tr>
                                <th class="text-center pt-3">
                                    <div class="custom-checkbox custom-checkbox-table custom-control">
                                        <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                               class="custom-control-input" id="checkbox-all">
                                        <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                    </div>
                                </th>
                                <th>Resim</th>
                                <th>Personel Adı</th>
                                <th>Personel Soyadı</th>
                                <th>Telefon No</th>
                                <th>E-Posta</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var rehber in Rehber)

                            {
                            <tr>
                                <td class="text-center pt-2">
                                    <div class="custom-checkbox custom-control">
                                        <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                                               id="checkbox-1">
                                        <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
                                    </div>
                                </td>
                                <td>@rehber.ProfilResmi?.Yolu</td>

                                <td>@rehber.Adi</td>
                                <td>@rehber.Soyadi</td>
                                <td>
                                    @rehber.TelefonNo
                                </td>
                                <td>@rehber.Email</td>

                                <td>
                                    <a href='/rehber/duzenle/@rehber.Id' class="btn btn-info btn-outline-dark" role="button">Düzenle</a>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteEmpModal"
                                            @onclick="@(() => {DialogGorunur="block"; SilmeyiOnayla(rehber.Id);})">
                                        Sil
                                    </button>
                                </td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>

            </CardBody>
        </CardComponent>

    </div>


    <ModalComponent @ref="ModalDialog">
        <ModalHeader>
            <h5>Bu veriyi silmek istediğinize emin misiniz ??</h5>
        </ModalHeader>

        <ModalFooter>
            <button class="btn btn-danger" @onclick="@(()=>{Sil(); ModalDialog.Close();})">Evet</button>
            <button class="btn btn-warning" @onclick="@(()=>{ModalDialog.Close();})">Hayır</button>
        </ModalFooter>
    </ModalComponent>

}


<style>
    .modal-content {
        max-width: 100%;
        border: none;
        margin-top: 200px;
        box-shadow: 0 3px 8px rgb(0 0 0 / 5%);
    }

    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>