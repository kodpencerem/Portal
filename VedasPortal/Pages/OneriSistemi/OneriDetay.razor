@page "/oneri/detay/{oneriId:int}"

<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Öneri Detay Bilgileri
                </div>
            </div>
        </CardHeader>
        <CardBody>
            @if (OneriDetayGetir != null)
            {

                
                        <div class="post-details">
                            <h3 class="mb-2 text-black">@OneriDetayGetir.Adi</h3>
                            <ul class="mb-4 post-meta d-flex flex-wrap">
                                <li class="post-author mr-3">@OneriDetayGetir.KaydedenKullanici</li>
                                <li class="post-date mr-3"><i class="fa fa-calender">
                                      </i>@OneriDetayGetir.KayitTarihi</li>
                                @*<li class="post-comment"><i class="fa fa-comments-o"></i> 28</li>*@
                            </ul>
                            <img src="images/uploaded/OneriDetayDosya?.Yolu" 
                                 alt="" 
                                 class="img-fluid mb-3">
                            <p>
                                @if (OneriDetayGetir.Aciklama != null)
                                {
                                    <MarkDownComponent Content="@(OneriDetayGetir.Aciklama.Length>500 ? 
                                                                  OneriDetayGetir.Aciklama.Substring(0, 280) + "..." : 
                                                                  OneriDetayGetir.Aciklama)" />
                                }

                            </p>
                            <YorumComponent/>
                            <YorumEkleDuzenle/>
                        </div>
                    }
            </CardBody>
        </CardComponent>
</div>


<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>
