@page "/Oneriler"
@inherits OnerilerModeli


@if (Oneriler == null)

{
    <p><em>Yükleniyor...</em></p> }

else

{
    <div class="col-12">
        <CardComponent cardStyle="Style.primary">

            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        Sizden Gelen Öneriler |
                        <a href='/oneri/ekle'
                           class="btn btn-primary"
                           role="button">
                            <i class="fa fa-user-plus"></i>
                            Yeni Bir Öneri Ekle
                        </a>
                    </div>
                </div>
                @*<div style="margin-left:890px" class="float-right">
                        <button btnStyle="Style.primary"></button>
                    </div>*@
            </CardHeader>
            <CardBody>

                <div class="row">

                    @foreach (var oneri in Oneriler)
                    {

                        <div class="profile-uoloaded-post border-bottom-1 pb-5">
                            <img src="images/uploaded/@string.Concat(
                                                                       oneri.Dosya.FirstOrDefault().Adi,
                                                                       ".",
                                                                       oneri.Dosya.FirstOrDefault().Uzanti)"
                                 width="50"
                                 height="50"
                                 class="img-fluid" />
                            <a class="post-title"
                               href="post-details.html">
                                <h3 class="text-black">
                                    @if (oneri.Adi != null)
                                    {
                                        <MarkDownComponent Content="@(oneri.Adi.Length>30 ?
                                                                      oneri.Adi.Substring(0, 19) + "..." :
                                                                      oneri.Adi)" />
                                    }
                                </h3>
                            </a>
                            <p>
                                @if (oneri.Aciklama != null)
                                {
                                    <MarkDownComponent Content="@(oneri.Aciklama.Length>500 ?
                                                                  oneri.Aciklama.Substring(0, 280) + "..." :
                                                                  oneri.Aciklama)" />}
                            </p>

                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <br />
                            <button class="btn btn-primary mr-2">
                                <span class="mr-2">
                                    <i class="fa fa-heart"></i>
                                </span>Beğen
                            </button>
                            <button class="btn btn-secondary" data-toggle="modal" data-target="#replyModal">
                                <span class="mr-2">
                                    <i class="fa fa-reply">
                                    </i>
                                </span>Yorum Yap
                            </button>
                        </div>
                    }

                </div>
            </CardBody>
        </CardComponent>
    </div>}


<style>
    .article .article-details {
        min-height: 200px;
        max-height: 200px;
    }

    .theme-white .btn-primary {
        background-color: #6777ef;
        border-color: transparent !important;
        color: #fff;
    }

    .card .card-footer {
        background-color: transparent;
        border: none;
        margin-top: -3rem;
    }
</style>

