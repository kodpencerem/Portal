@page "/Oneriler"
@inherits OnerilerModeli


@if (Oneriler == null)

{
    <p><em>Yükleniyor...</em></p> }

else

{
    <div class="col-12">
        <CardComponent cardStyle="Style.primary">

            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        Sizden Gelen Öneriler |
                        <a href='/oneri/ekle'
                           class="btn btn-primary"
                           role="button">
                            <i class="fa fa-user-plus"></i>
                            Yeni Bir Öneri Ekle
                        </a>
                    </div>
                </div>
                @*<div style="margin-left:890px" class="float-right">
                        <button btnStyle="Style.primary"></button>
                    </div>*@
            </CardHeader>
            <CardBody>

                <div class="row">

                    @foreach (var oneri in Oneriler)
                    {
                        <div class="col-lg-3 col-sm-12 col-md-6 col-xs-12">
                            <CardComponent cardStyle="Style.primary">
                                <CardBody>

                                    <div class="profile-uoloaded-post border-bottom-1 pb-5">
                                        <img src="images/uploaded/@string.Concat(
                                                                       oneri.Dosya.FirstOrDefault().Adi,
                                                                       ".",
                                                                       oneri.Dosya.FirstOrDefault().Uzanti)"
                                             width="350"
                                             height="150"
                                             class="img-fluid" />
                                        <a class="post-title"
                                           href="oneri/detay/@oneri.Id">
                                            <h3 class="text-black">
                                                @if (oneri.Adi != null)
                                                {
                                                    <MarkDownComponent Content="@(oneri.Adi.Length>30 ?
                                                                      oneri.Adi.Substring(0, 19) + "..." :
                                                                      oneri.Adi)" />
                                                }
                                            </h3>
                                        </a>
                                        <p>
                                            @if (oneri.Aciklama != null)
                                            {
                                                <MarkDownComponent Content="@(oneri.Aciklama.Length>80 ?
                                                                  oneri.Aciklama.Substring(0, 40) + "..." :
                                                                  oneri.Aciklama)" />}
                                        </p>
                                        <LikeButton />
                                    </div>


                                </CardBody>
                            </CardComponent>
                        </div>
                    }
                </div>
            </CardBody>
        </CardComponent>
    </div>}


<style>
    .article .article-details {
        min-height: 200px;
        max-height: 200px;
    }

    .theme-white .btn-primary {
        background-color: #6777ef;
        border-color: transparent !important;
        color: #fff;
    }

    .card .card-footer {
        background-color: transparent;
        border: none;
        margin-top: -3rem;
    }

    .img-fluid {
        max-width: 100%;
        height: 250px;
        max-height: 350px;
    }
</style>