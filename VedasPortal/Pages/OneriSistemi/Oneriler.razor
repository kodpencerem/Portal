@page "/Oneriler"
@inherits OnerilerModeli


@if (Oneriler == null)

{
<p><em>Yükleniyor...</em></p> }

else

{
<div class="col-12">
    <CardComponent cardStyle="Style.primary">

        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Sizden Gelen Öneriler |
                    <a href='/oneri/ekle' class="btn btn-primary" role="button"><i class="fa fa-user-plus"></i> Yeni Bir Öneri Ekle</a>
                </div>
            </div>
            @*<div style="margin-left:890px" class="float-right">
                <button btnStyle="Style.primary"></button>
            </div>*@
        </CardHeader>
        <CardBody>

            <div class="row">

                @foreach (var oneri in Oneriler)
                {
<div class="col-12 col-sm-6 col-md-6 col-lg-3">
    <article class="article article-style-b">
        <div class="article-header">
            <div class="article-image" data-background="assets/img/blog/img07.png" style="background-image: url(&quot;assets/img/blog/img07.png&quot;);">
            </div>
            <div class="article-badge">
                <div class="article-badge-item bg-danger"><i class="fas fa-fire"></i> Trend Öneri</div>
            </div>
        </div>
        <div class="article-details">
            <div class="article-title">
                <h2><a href="#">Öneri Adı: @oneri.Adi</a></h2>
            </div>


            <p>
                @if (oneri.Aciklama != null)
                {
                    <MarkDownComponent Content="@(oneri.Aciklama.Length>500 ? oneri.Aciklama.Substring(0, 280) + "..." : oneri.Aciklama)" />}
            </p>
            <div class="ratting">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div>
            <br />
            <button>
                <i onclick="myFunction(this)" class="fa fa-thumbs-up"></i>
                Beğen
            </button>|
            <button>
                Yorum Yap
            </button>
            <div class="article-cta">
                <a href="oneri/detay/@oneri.Id"> Öneri Detayına Bak <i class="fas fa-chevron-right"></i></a>
            </div>
        </div>
    </article>
</div>}

            </div>


        </CardBody>
    </CardComponent>
</div>}


<style>
    .article .article-details {
        min-height: 200px;
        max-height: 200px;
    }

    .theme-white .btn-primary {
        margin-left: 8rem;
        background-color: #6777ef;
        border-color: transparent !important;
        color: #fff;
    }

    .card .card-footer {
        background-color: transparent;
        border: none;
        margin-top: -3rem;
    }

    
</style>

