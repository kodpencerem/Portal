@page "/OneriSistemi"

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4>Önerinizi Bize Yazın </h4>
					</div>
					<div class="card-body">
						<div class="form-group row mb-4">
							<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Öneri Başlığı</label>
							<div class="col-sm-12 col-md-7">
								<input type="text" class="form-control">
							</div>
						</div>
						<div class="form-group row mb-4">
							<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Kategorisi</label>
							<div class="col-sm-12 col-md-7">
								<select class="form-control selectric">
									<option>Eğitim</option>
									<option>Etkinlikler</option>
									<option>Faaliyetler</option>
								</select>
							</div>
						</div>
						<Summernote></Summernote>
						<div class="form-group row mb-4">
							<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Varsa Resim veya Döküman Ekleyin</label>
							<div class="col-sm-12 col-md-7">
								<div id="image-preview" class="image-preview">
									<label for="image-upload" id="image-label">Dosya/Döküman/Resim Seç</label>
									<input type="file" name="image" id="image-upload" />
								</div>
							</div>
						</div>
						<div class="form-group row mb-4">
							<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Öneriyi Yapan Personel</label>
							<div class="col-sm-12 col-md-7">
								<input type="text" class="form-control inputtags">
							</div>
						</div>
						<div class="form-group row mb-4">
							<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Önem Derecesi</label>
							<div class="col-sm-12 col-md-7">
								<select class="form-control selectric">
									<option>Yüksek</option>
									<option>Orta</option>
									<option>Düşük</option>
								</select>
							</div>
						</div>
						<div class="form-group row mb-4">
							<label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
							<div class="col-sm-12 col-md-7">
								<button type="submit" class="btn btn-primary">Gönder</button>
								<button class="btn btn-light">Vazgeç</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>




