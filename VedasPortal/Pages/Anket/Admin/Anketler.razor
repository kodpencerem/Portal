@page "/anketlerlistesi"


<div class="col-lg-12 col-sm-12 col-md-6 col-xs-12 ">
    <CardComponent cardStyle="Style.warning">
        <CardHeader>
            Anketler
        </CardHeader>
        <CardBody>

            @if (!isReady)
            {
                <p>Yükleniyor...</p>
            }
            else
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Anket Adı</th>
                            <th>Açıklama</th>
                            <th>Katılım Sayısı</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (SurveyList.Count == 0)
                    {
                        <tr>
                            <td colspan="5">Görüntülenecek anket yok!</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var survey in SurveyList)
                        {
                            <tr>
                                <td><button class="btn btn-sm btn-primary" @onclick="() => EditSurvey(survey.AnketId)">Düzenle</button></td>
                                <td><button class="btn btn-sm btn-danger" @onclick="() => DeleteSurvey(survey.AnketId)">Sil</button></td>
                                <td>@survey.Adi</td>
                                <td>@survey.Aciklama</td>
                                <td>@survey.ToplamAlinanSure</td>
                            </tr>
                        }
                    }
                  
                    </tbody>

                </table>
            }

        </CardBody>
        <CardFotter>
            <p class="m-0 text-center text-white">Copyright &copy; Vedaş Anket @DateTime.Now.Year</p>
        </CardFotter>
    </CardComponent>
</div>

<style>
    .modal-content {
        max-width: 100%;
        border: none;
        margin-top: 200px;
        box-shadow: 0 3px 8px rgb(0 0 0 / 5%);
    }

    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>
