@page "/basinduyurulari"

@using VedasPortal.Models.YayinDurumlari
@inject HaberService haberService



@if (HaberleriGetir is null)
{
<p><em>Yükleniyor... !</em></p> }
else
{ <div class="col-12">
    <CardComponent cardStyle="Style.primary">

        <CardHeader>
            <div class="float-left">
                <div class="col-md-12">
                    Basın Duyuruları |
                    <a href='/basinduyurusu/ekle' class="btn btn-primary" role="button"><i class="fa fa-user-plus"></i> Basın Duyurusu Ekle</a>
                </div>
            </div>
            <div style="margin-left:935px" class="float-right">
                <div class="chat-search">
                    <input type="text" class="form-control" placeholder="Haber Ara..." />
                </div>
            </div>
        </CardHeader>
        <CardBody>
            <div class="table-responsive">
                <table class="table table-striped" id="table-2">
                    <thead>
                        <tr>
                            <th class="text-center pt-3">
                                <div class="custom-checkbox custom-checkbox-table custom-control">
                                    <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                           class="custom-control-input" id="checkbox-all">
                                    <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                </div>
                            </th>
                            <th>Resim/Video</th>
                            <th>Basın DuyuruAdi</th>
                            <th>DuyuruAciklama</th>
                            <th>Ekleyen Birim</th>

                            <th>Yayın Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var haber in HaberleriGetir)
                        {
    <tr>
        <td class="text-center pt-2">
            <div class="custom-checkbox custom-control">
                <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                       id="checkbox-1">
                <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
            </div>
        </td>
        <td>Kişisel Gelişim</td>
        <td>Basın DuyuruAdi</td>
        <td>DuyuruAciklama</td>
        <td>Bilgi İşlem</td>

        <td>21.12.2021</td>
        <td>
            <a href="/basinduyurusu/duzenle/@haber.Id" class="btn btn-info">
                Düzenle
            </a>
            |
            <a href="basinduyurudetay/@haber.Id" class="btn btn-primary">
                Detay Bilgi
            </a>
            |
            <a href="#" class="btn btn-danger">
                Sil
            </a>
        </td>
    </tr>}
                    </tbody>
                </table>
            </div>
        </CardBody>
    </CardComponent>
</div>}



@code { List<Yayin> HaberleriGetir;
    protected override async Task OnInitializedAsync()
    {
        HaberleriGetir = await Task.Run(() => haberService.TumHaberleriGetir());
    } }


<style>
    .row {
        display: -ms-flexbox;
        display: -webkit-box;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: -15px;
        margin-right: -15px;
        margin-left: -15px;
    }
</style>
