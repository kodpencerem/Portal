@page "/haberler"
@inherits HaberModeli

@if (haberler == null)

{
    <p><em>Yükleniyor...</em></p>
}

else

{
    <div class="col-12">
        <div class="row">
            @foreach (var haber in haberler.Where(h => h.Kategori.TextHaberDuyuru() == "Haber" && h.AktifPasif == true))
            {
                <div class="col-lg-3 col-sm-12 col-md-6 col-xs-12">
                    <article class="article article-style-c">
                        <div class="author-box-center align-center">
                            <img width="200" height="200" alt="@haber.Adi" src="images/uploaded/@haber.Dosya.FirstOrDefault()?.Yolu" class="rounded-circle author-box-picture">
                            <div class="clearfix"></div>
                        </div>
                        <div class="article-details">
                            <div class="article-category">
                                <a href="haber/detay/@haber.Id">Haber</a>
                                <div class="bullet"></div> <a>@haber.KayitTarihi</a>
                            </div>
                            <div class="article-title">
                                <h1 class="article-style-b">
                                    <a href="haber/detay/@haber.Id">
                                        @if (haber.Adi != null)
                                        {
                                            <MarkDownComponent Content="@(haber.Adi.Length>60 ? haber.Adi.Substring(0, 27) + "..." : haber.Adi)" />
                                        }
                                    </a>
                                </h1>
                            </div>
                            <div name="HaberAltBaslik" class="article-title">
                                <p class="alert-title">
                                    @if (haber.AltBaslik != null)
                                    {
                                        <MarkDownComponent Content="@(haber.AltBaslik.Length>60 ? haber.AltBaslik.Substring(0, 45) + "..." : haber.AltBaslik)" />
                                    }
                                </p>
                            </div>
                            <p name="HaberAciklama" class="accordion-header">


                                @if (haber.Aciklama != null)
                                {
                                    <MarkDownComponent Content="@(haber.Aciklama.Length>500 ? haber.Aciklama.Substring(0, 280) + "..." : haber.Aciklama)" />
                                }
                            </p>


                        </div>
                        @*<div class="article-cta centered">
                                <a href="@($"haber/detay/{haber.Id}")" class="btn btn-primary fas fa-chevron-right">Haber Detayı</a>
                            </div>*@
                    </article>
                </div>
            }

        </div>
    </div>

}


<style>
    .article .article-details {
        min-height: 210px;
        max-height: 210px;
    }

    .theme-white .btn-primary {
        margin-left: 8rem;
        background-color: #6777ef;
        border-color: transparent !important;
        color: #fff;
    }
</style>

