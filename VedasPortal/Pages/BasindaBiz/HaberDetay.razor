@page "/haber/detay/{haberId:int}"

<div class="col-12">
	<CardComponent cardStyle="Style.primary">
		<CardBody>
			<div class="container-fliud">
				@{
					if (HaberDetayGetir != null)
					{
						<div class="wrapper row">
							<div class="preview col-lg-4 col-sm-12 col-md-6 col-xs-12">

								<div class="preview-pic tab-content ">
									<div class="tab-pane active col-lg-4 col-sm-12 col-md-6 col-xs-12"
								 	id="pic-1">
										<img src="images/uploaded/@string.Concat(HaberDetayGetir.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               HaberDetayGetir.Dosya?.FirstOrDefault().Uzanti)"
									 	width="494"
									 	alt="@HaberDetayGetir.Adi" />
									</div>

									@foreach (var resim in HaberDetayGetir?.Dosya.Where(x => x.HaberDuyuruId == HaberDetayGetir.Id).ToList())
									{
										<div class="tab-pane"
								 	id="pic-2">
											<img src="images/uploaded/@string.Concat(HaberDetayGetir.Dosya?.FirstOrDefault().Adi,
                                                                                       ".",
                                                                                       HaberDetayGetir.Dosya?.FirstOrDefault().Uzanti)"
									 	width="494"
									 	alt="@HaberDetayGetir.Adi" />
										</div>
									}



								</div>
								<ul style="margin-left:7px" class="preview-thumbnail nav nav-tabs">
									<li class="active">
										<a data-target="#pic-1" data-toggle="tab">
											<img src="images/uploaded/@string.Concat(HaberDetayGetir.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               HaberDetayGetir.Dosya?.FirstOrDefault().Uzanti)"
										 	width="76"
										 	alt="@HaberDetayGetir.Adi" />
										</a>
									</li>

									@foreach (var resim in HaberDetayGetir?.Dosya.Where(x => x.HaberDuyuruId == HaberDetayGetir.Id).ToList())
									{
										<li>
											<a data-target="#pic-2"
								   	data-toggle="tab">
												<img src="images/uploaded/@string.Concat(HaberDetayGetir.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               HaberDetayGetir.Dosya?.FirstOrDefault().Uzanti)"
										 	width="76"
										 	alt="@HaberDetayGetir.Adi" />
											</a>
										</li>
									}

								</ul>

							</div>
							<div class="details col-lg-8 col-sm-12 col-md-6 col-xs-12">
								<h3 class="product-title">@HaberDetayGetir.Adi</h3>
								<div class="rating">
									<div class="stars">
										<Rating Color="Color.Primary" @bind-SelectedValue="@HaberDetayGetir.BegeniDerecesi" MaxValue="5" />
									</div>
									<span class="review-no">41 Personel Gördü</span>
								</div>
								<p class="haber-detay">@((MarkupString) HaberDetayGetir.Aciklama)</p>

								<p class="vote"><strong>@HaberDetayGetir.BegeniYuzdesi%</strong> personel bu yayını beğendi <strong>(@HaberDetayGetir.BegeniSayisi Beğeni)</strong></p>

								<div class="action">
									<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
								</div>
							</div>
						</div>
					}
				}

			</div>



		</CardBody>
		<CardFotter>
			<div class="mt-3 text-center">
				<a class="btn btn-primary" href="haberler">
					<i class="fas fa-arrow-left"></i> Haberler
				</a>
			</div>
		</CardFotter>
	</CardComponent>

</div>


<style>
	.row {
		display: -ms-flexbox;
		display: -webkit-box;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		margin-top: -15px;
		margin-right: -15px;
		margin-left: -15px;
	}
</style>
