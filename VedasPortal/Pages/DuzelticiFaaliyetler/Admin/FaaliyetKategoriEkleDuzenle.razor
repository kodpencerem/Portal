@page "/faaliyetkategori/ekle"
@page "/faaliyetkategori/duzenle/"

<div class="col-12 col-md-12 col-lg-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Faaliyet Kategorisi Ekle/Düzenle
        </CardHeader>
        <CardBody>
            <div class="form-group">
                <label>Faaliyet Kategorisi Adı</label>
                <input type="text" class="form-control">
            </div>


            <div class="form-group">
                <label>Açıklama Metni</label>
                <Summernote></Summernote>
            </div>

            <div class="form-group">
                <label>Faaliyet Kategorisi Durumu</label>
                <input type="text" class="form-control">
            </div>

            <div class="form-group">
                <label>Eklenme Tarihi</label>
                <input type="datetime-local" class="form-control">
            </div>

            <div class="card-footer text-right">
                <button class="btn btn-primary mr-1" type="submit">Kaydet</button>
                <button class="btn btn-secondary" type="reset">Vazgeç</button>
            </div>
        </CardBody>

    </CardComponent>
</div>