@page "/duyuru/detay/{duyuruId:int}"
@using System;
@using System.Collections.Generic;
<div class="col-12">
	<CardComponent cardStyle="Style.primary">
		<CardBody>
			<div class="container-fliud">
				@{
					if (DuyuruDetayGetir != null)
					{
						<div class="wrapper row">
							<div class="preview col-lg-4 col-sm-12 col-md-6 col-xs-12">

								<div class="preview-pic tab-content">
									<div class="tab-pane active"
								 	id="pic-1">
										<img src="images/uploaded/@string.Concat(DuyuruDetayGetir.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               DuyuruDetayGetir.Dosya?.FirstOrDefault().Uzanti)"
									 	width="494"
									 	alt="@DuyuruDetayGetir.Adi" />
									</div>

									@foreach (var resim in DuyuruDetayGetir?.Dosya.Where(x => x.HaberDuyuruId == DuyuruDetayGetir.Id).ToList())
									{
										<div class="tab-pane" id="pic-2">
										<img src="images/uploaded/@string.Concat(resim.Adi,
                                               ".",
                                               resim.Uzanti)"
									 	width="494"
									 	alt="@resim.Adi" />
									</div>

									}								
								</div>
								<ul class="preview-thumbnail nav nav-tabs">
									<li class="active">
										<a data-target="#pic-1" data-toggle="tab">
											<img src="images/uploaded/@string.Concat(DuyuruDetayGetir.Dosya?.FirstOrDefault().Adi,
                                               ".",
                                               DuyuruDetayGetir.Dosya?.FirstOrDefault().Uzanti)"
										 	width="76"
										 	alt="@DuyuruDetayGetir.Adi" />
										</a>
									</li>

									@foreach (var resim in DuyuruDetayGetir?.Dosya.Where(x => x.HaberDuyuruId == DuyuruDetayGetir.Id).ToList())
									{
										<li>
										<a data-target="#pic-2" data-toggle="tab">
											<img src="images/uploaded/@string.Concat(resim.Adi,
                                               ".",
                                               resim.Uzanti)"
										 	width="76"
										 	alt="@resim.Adi" />
										</a>
									</li>
									}


								</ul>

							</div>
							<div class="details col-lg-8 col-sm-12 col-md-6 col-xs-12">
								<h3 class="product-title">@DuyuruDetayGetir.Adi</h3>
								<Rating Color="Color.Primary" @bind-SelectedValue="@DuyuruDetayGetir.BegeniDerecesi" MaxValue="5" />

								<p class="blazor-modal-content">@((MarkupString) DuyuruDetayGetir.Aciklama)</p>

								<p class="vote"><strong>@DuyuruDetayGetir.BegeniYuzdesi%</strong> personel bu yayını beğendi <strong>(@DuyuruDetayGetir.BegeniSayisi Beğeni)</strong></p>

								<div class="action">

									<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
								</div>
							</div>
						</div>
					}
				}

			</div>


		</CardBody>

		<CardFotter>
			<div class="mt-3 text-center">
				<a class="btn btn-primary" href="duyurular">
					<i class="fas fa-arrow-left"></i> Duyurular
				</a>
			</div>

		</CardFotter>
	</CardComponent>

</div>


<style>
	.row {
		display: -ms-flexbox;
		display: -webkit-box;
		display: flex;
		-ms-flex-wrap: wrap;
		flex-wrap: wrap;
		margin-top: -15px;
		margin-right: -15px;
		margin-left: -15px;
	}
</style>
