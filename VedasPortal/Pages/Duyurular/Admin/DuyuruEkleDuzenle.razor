@page "/duyuru/ekle"
@page "/duyuru/duzenle/{duyuruId:int}"

@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment Environment

@inherits DuyuruEkleDuzenleModel
@inject IJSRuntime jsRun


<div class="col-12">
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            Duyuru @Title
        </CardHeader>
        <CardBody>
            <EditForm Model="@duyuru" OnValidSubmit="DuyuruKayit">
                <DataAnnotationsValidator />

                <div class="col-12">
                    <div class="col-md-6 float-left">
                        <div class="form-group row">
                            <label class="form-label col-md-2">Resim Seçin</label>
                            <div class="col-md-10">
                                <ImageResizer @bind-ValuePath="@duyuru.DosyaYolu" />
                                @if (!string.IsNullOrEmpty(duyuru.DosyaYolu))
                                {
                                    <img src="@("img/uploaded/"+duyuru.DosyaYolu)" height="150" />
                                }
                            </div>
                            <ValidationMessage For="@(() => duyuru.DosyaYolu)" />
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Duyuru Adı</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="duyuru.Adi" />
                            </div>
                            <ValidationMessage For="@(() => duyuru.Adi)" />
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-2">Duyuru Alt Başlığı</label>
                            <div class="col-md-10">
                                <InputText class="form-control" @bind-Value="duyuru.AltBaslik" />
                            </div>
                            <ValidationMessage For="@(() => duyuru.AltBaslik)" />
                        </div>


                        <div class="form-group row">
                            <label for="Kategori" class="control-label col-md-2">Kategori Seçin</label>
                            <div class="col-md-10">
                                <InputSelect @bind-Value="@duyuru.YayinKategoriId" class="form-control">
                                    <option></option>
                                    @foreach (var kategori in Kategoriler)
                                    {
                                        <option value="@kategori.Id"> @kategori.YayinKategoriAdi </option>
                                    }

                                </InputSelect>
                            </div>
                            <ValidationMessage For="@(() => duyuru.YayinKategoriId)" />
                        </div>

                        <br />
                        <div class="row">
                            <div class="form-group row col-md-4">
                                <label class="control-label col-md-8">Duyuru Şimdi Yayınlasın Mı?</label>
                                <div class="col-md-4">
                                    <InputCheckbox class="form-control" @bind-Value="duyuru.YayinDurumu" />
                                </div>
                                <ValidationMessage For="@(() => duyuru.YayinDurumu)" />
                            </div>

                            <div class="form-group row col-md-4">
                                <label class="control-label col-md-8">Duyuru Kutusuna Eklensin Mi?</label>
                                <div class="col-md-4">
                                    <InputCheckbox class="form-control" @bind-Value="duyuru.DuyuruKutusundaOlsunMu" />
                                </div>
                                <ValidationMessage For="@(() => duyuru.DuyuruKutusundaOlsunMu)" />
                            </div>

                            <div class="form-group row col-md-4">
                                <label class="control-label col-md-8">Slidera Eklensin Mi?</label>
                                <div class="col-md-4">
                                    <InputCheckbox class="form-control" @bind-Value="duyuru.SlideraEklensinMi" />
                                </div>
                                <ValidationMessage For="@(() => duyuru.SlideraEklensinMi)" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 float-right">
                        <div class="form-group row">
                            <label class="control-label col-md-2">Açıklama</label>
                            <div class="col-md-12">
                                <TextEditor  @bind-ValuePath="@duyuru.Aciklama" ></TextEditor>
                            </div>
                            <ValidationMessage For="@(() => duyuru.Aciklama)" />
                        </div>
                        

                    </div>
                </div>

            </EditForm>

        </CardBody>

        <CardFotter>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" @onclick="DuyuruKayit">Kaydet</button>
                <button class="btn btn-danger" type="reset" @onclick="Temizle">Tümünü Temizle</button>
            </div>
        </CardFotter>
    </CardComponent>

</div>


@if (DuyurularListesi == null)

{
    <p><em>Yükleniyor...</em></p>
}

else

{

    <div class="col-12">

        <CardComponent cardStyle="Style.primary">

            <CardHeader>
                <div class="float-left">
                    <div class="col-md-12">
                        Duyurular |
                        <a href='/duyuru/kategori/ekle' class="btn btn-primary" role="button"><i class="fa fa-user-plus"></i> Duyuru Kategorisi Ekle</a>
                    </div>
                </div>

            </CardHeader>
            <CardBody>
                <div class="table-responsive">
                    <table class="table table-striped" id="table-2">
                        <thead>
                            <tr>
                                <th class="text-center pt-3">
                                    <div class="custom-checkbox custom-checkbox-table custom-control">
                                        <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad"
                                               class="custom-control-input" id="checkbox-all">
                                        <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                    </div>
                                </th>
                                <th>Resim</th>

                                <th>Duyuru Adı</th>
                                <th>Duyuru Durumu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var duyuru in DuyurularListesi)

                            {
                                <tr>
                                    <td class="text-center pt-2">
                                        <div class="custom-checkbox custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input"
                                                   id="checkbox-1">
                                            <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </td>
                                    <td>@duyuru.DosyaYolu</td>

                                    <td>@duyuru.Adi</td>
                                    <td>
                                        @if (duyuru.YayinDurumu == true)
                                        {


                                            <div class="badge badge-success badge-shadow">Yayında</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-warning badge-shadow">Yayında Değil</div>}
                                    </td>

                                    <td>
                                        <a href="@($"duyuru/detay/{duyuru.Id}")" class="btn btn-primary">Duyuru Detayı</a>
                                        <a href='/duyuru/duzenle/@duyuru.Id' class="btn btn-info btn-outline-dark" role="button">Düzenle</a>
                                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteEmpModal"
                                                @onclick="@(() => {DialogGorunur="block"; SilmeyiOnayla(duyuru.Id);})">
                                            Sil
                                        </button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>

            </CardBody>
        </CardComponent>

    </div>


    <ModalComponent @ref="ModalDialog">
        <ModalHeader>
            <h3 class="modal-title">Duyuru Silme</h3>
        </ModalHeader>
        <ModalBody>
            <h4>Bu veriyi silmek istediğinize emin misiniz ??</h4>
            <table class="table">
                <tr>
                    <td>Resim</td>
                    <td>@duyuru.DosyaYolu</td>
                </tr>
                <tr>
                    <td>Duyuru Adı</td>
                    <td>@duyuru.Adi</td>
                </tr>

                <tr>
                    <td>Oluşturulma Tarihi</td>
                    <td>@duyuru.KayitTarihi.ToString("d")</td>
                </tr>
            </table>
        </ModalBody>
        <ModalFooter>
            <button class="btn btn-danger" @onclick="@(()=>{DuyuruSil(); ModalDialog.Close();})">Evet</button>
            <button class="btn btn-warning" @onclick="@(()=>{ModalDialog.Close();})">Hayır</button>
        </ModalFooter>
    </ModalComponent>

}

@code {




    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        if (firstRender)
        {

            await jsRun.InvokeVoidAsync("dataTables");
        }
    }


}


