@page "/profil"
@inherits ProfilModeli


<div class="col-12 col-md-6 col-lg-4">
    <CardComponent cardStyle="Style.primary">
        <CardBody>
            <div class="author-box-center text-center">
                <img width="200" height="200" alt="image" src="assets/img/users/user-1.png" class="rounded-circle author-box-picture">
                <div class="clearfix"></div>
                <div class="author-box-name">
                    <a href="#">Personel Adı</a>
                </div>
                <div class="author-box-job">iş email</div>
            </div>
            <div class="text-center">
                <div class="author-box-description">
                    <p>
                        Hakkında Kısa Bilgi
                    </p>
                    <div class="mb-2 mt-3 text-center">
                        <a class="btn btn-success">Hakkında Ekle</a>
                        <a class="btn btn-warning">Düzenle</a>
                    </div>
                </div>
                <div class="mb-2 mt-3">
                    <div class="text-small font-weight-bold">Takip Et</div>
                </div>
                <a href="#" class="btn btn-social-icon mr-1 btn-facebook">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="btn btn-social-icon mr-1 btn-twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#" class="btn btn-social-icon mr-1 btn-github">
                    <i class="fab fa-github"></i>
                </a>
                <a href="#" class="btn btn-social-icon mr-1 btn-instagram">
                    <i class="fab fa-instagram"></i>
                </a>
                <div class="w-100 d-sm-none"></div>
            </div>
        </CardBody>
    </CardComponent>
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <h4>Personel İletişim Bilgileri</h4>
        </CardHeader>
        <CardBody>
            <div class="py-4">
                <p class="clearfix">
                    <span class="float-left">
                        Birthday
                    </span>
                    <span class="float-right text-muted">
                        30-05-1998
                    </span>
                </p>
                <p class="clearfix">
                    <span class="float-left">
                        Phone
                    </span>
                    <span class="float-right text-muted">
                        (0123)123456789
                    </span>
                </p>
                <p class="clearfix">
                    <span class="float-left">
                        Mail
                    </span>
                    <span class="float-right text-muted">
                        test@example.com
                    </span>
                </p>
                <p class="clearfix">
                    <span class="float-left">
                        Facebook
                    </span>
                    <span class="float-right text-muted">
                        <a href="#">John Deo</a>
                    </span>
                </p>
                <p class="clearfix">
                    <span class="float-left">
                        Twitter
                    </span>
                    <span class="float-right text-muted">
                        <a href="#">Kullanıcı Adı</a>
                    </span>
                </p>
            </div>
            <div class="mb-2 mt-3" style="margin:10px">
                <a class="btn btn-success">İletişim Bilgisi Ekle</a>
                <a class="btn btn-warning">Düzenle</a>
                <a class="btn btn-danger">Sil</a>

            </div>
        </CardBody>
    </CardComponent>
    <CardComponent cardStyle="Style.primary">
        <CardHeader>
            <h4>Yetenek ve Uzmanlık Alanları</h4>
        </CardHeader>
        <CardBody>
            <ul class="list-unstyled user-progress list-unstyled-border list-unstyled-noborder">
                <li class="media">
                    <div class="media-body">
                        <div class="media-title">C# Programlama</div>
                    </div>
                    <div class="media-progressbar p-t-10">
                        <div class="progress" data-height="6">
                            <div class="progress-bar bg-primary" data-width="70%"></div>
                        </div>
                    </div>
                </li>
                <li class="media">
                    <div class="media-body">
                        <div class="media-title">Web Tasarım</div>
                    </div>
                    <div class="media-progressbar p-t-10">
                        <div class="progress" data-height="6">
                            <div class="progress-bar bg-warning" data-width="80%"></div>
                        </div>
                    </div>
                </li>
                <li class="media">
                    <div class="media-body">
                        <div class="media-title">Photoshop</div>
                    </div>
                    <div class="media-progressbar p-t-10">
                        <div class="progress" data-height="6">
                            <div class="progress-bar bg-green" data-width="48%"></div>
                        </div>
                    </div>
                </li>
            </ul>

            <div class="mb-2 mt-3" style="margin:10px">
                <a class="btn btn-success">Uzmanlık Alanı Ekle</a>
                <a class="btn btn-warning">Düzenle</a>
                <a class="btn btn-danger">Sil</a>
            </div>
        </CardBody>
    </CardComponent>
</div>
<div class="col-12 col-md-12 col-lg-8">
    <CardComponent cardStyle="Style.primary">
        <CardBody>
            <div class="padding-20">
                <ul class="nav nav-tabs" id="myTab2" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab2" data-toggle="tab" href="#about" role="tab"
                           aria-selected="true">Hakkında</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab2" data-toggle="tab" href="#settings" role="tab"
                           aria-selected="false">Ayarlar</a>
                    </li>
                </ul>
                <div class="tab-content tab-bordered" id="myTab3Content">
                    <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="home-tab2">


                        <div class="section-title">Aldığı Eğitimler</div>
                        <ul>
                            @foreach (var mezun in MezunBilgileri)
                            {
                                <li>
                                    @mezun.EgitimDurumu - @mezun.OkulAdi <br />
                                    @mezun.BaslamaTarihi - @mezun.MezuniyetTarihi 
                                    <a href='/mezuniyet/duzenle/@mezun.Id' class="btn btn-info btn-outline-dark" role="button">Düzenle</a>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteEmpModal"
                                            @onclick="@(() => {DialogGorunur="block"; MezuniyetSilmeyiOnayla(mezun.Id);})">
                                        Sil
                                    </button>
                                </li>
                            }

                        </ul>
                        <div class="mb-2 mt-3" style="margin:10px">
                            <a href='/mezuniyet/ekle' class="btn btn-primary" role="button">
                                <i class="fa fa-user-plus"></i> Eğitim Bilgisi Ekle
                            </a>
                        </div>
                        <div class="section-title">Sertifika ve Kurs Bilgileri</div>
                        <ul>

                            @foreach (var kursVeSertifika in KursVeSertifikalar)
                            {
                                <li>
                                    @kursVeSertifika.SertifikaKodu - @kursVeSertifika.SertifikaBaslik <br />
                                    @kursVeSertifika.SertifikaUrlAdres <br />
                                    Geçerlili Süresi : @kursVeSertifika.GecerlilikSuresi
                                    @kursVeSertifika.Aciklama &amp; @kursVeSertifika.VerenKurum <br />
                                    @kursVeSertifika.BaslamaTarihi - @kursVeSertifika.BitisTarihi <br />
                                    Sertifika Veriliş Tarihi : @kursVeSertifika.SertifikaVerilisTarihi
                                    <a href='/kurs/duzenle/@kursVeSertifika.Id' class="btn btn-info btn-outline-dark" role="button">Düzenle</a>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteEmpModal"
                                            @onclick="@(() => {DialogGorunur="block"; KursSilmeyiOnayla(kursVeSertifika.Id);})">
                                        Sil
                                    </button>
                                </li>
                            }

                        </ul>
                        <div class="mb-2 mt-3" style="margin:10px">
                            <a href='/kurs/ekle' class="btn btn-primary" role="button">
                                <i class="fa fa-user-plus"></i> Kurs ve Sertifika Bilgisi Ekle
                            </a>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab2">
                        Ayarlar
                    </div>
                </div>
            </div>
        </CardBody>
    </CardComponent>
    <IsEmirleri />
    <ModalComponent @ref="ModalDialog">
        <ModalHeader>
            <h5>Bu veriyi silmek istediğinize emin misiniz ??</h5>
        </ModalHeader>

        <ModalFooter>
            <button class="btn btn-danger" @onclick="@(()=>{KursSil(); ModalDialog.Close();})">Evet</button>
            <button class="btn btn-warning" @onclick="@(()=>{ModalDialog.Close();})">Hayır</button>
        </ModalFooter>
    </ModalComponent>

    <ModalComponent @ref="ModalDialog">
        <ModalHeader>
            <h5>Bu veriyi silmek istediğinize emin misiniz ??</h5>
        </ModalHeader>

        <ModalFooter>
            <button class="btn btn-danger" @onclick="@(()=>{MezuniyetSil(); ModalDialog.Close();})">Evet</button>
            <button class="btn btn-warning" @onclick="@(()=>{ModalDialog.Close();})">Hayır</button>
        </ModalFooter>
    </ModalComponent>
</div>


