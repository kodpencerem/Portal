@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Onayı";
}

<h1>@ViewData["Title"]</h1>

<p>
    @Model.StatusMessage
</p>

@if (Model.Flag == true)
{
    <div class="row mt-3">
        <div class="col-12">
            <p class="text-muted"><a href="/Auth/SignIn" class="text-muted ml-1"><b>Oturum Aç</b></a> sayfasına gidin.</p>
        </div> <!-- end col -->
    </div>
}