@using VedasPortal.Repository.Interface

<div class="col-12">
    <CardComponent cardStyle="Style.info">
        <CardBody>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                    <VideoBoxComponent SecilenVideo="secilenVideo" />
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-3">
                    <VideoKoleksiyonu Videolar="VideoList.ToList()"  
                                      VideoSec="SecilenVideo" />
                </div>
            </div>
        </CardBody>

    </CardComponent>
</div>

@code {

    [Inject]
    protected IBaseRepository<Video> videoServisi { get; set; }

    protected IEnumerable<Video> VideoList;
    Video secilenVideo = new Video();

    protected override void OnInitialized()
    {
        VideoList = videoServisi.GetAll();
        secilenVideo = VideoList.FirstOrDefault();
    }

    void SecilenVideo(Video videoDetay)
    {
        secilenVideo = videoDetay;
    }
}

