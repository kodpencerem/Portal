@inherits BaseButton

<button class="btn@(IsSmall ? " btn-sm":"") btn@(IsOutline ? "-outline":"")-@Color"
        type="@buttonType"
        disabled="@IsBusy"
        onclick="@OnClick"
		aligment= "@alignment"
        title="@ToolTipStr">
    <span class="fa fa-@Icon fa-fw"></span>

    @if (IsBusy)
    {
        <span class="spinner-border spinner-border-sm mr-1" ></span>
        
    }

    @if (IsClose)
    {
        <span class="chocolat-close"></span>
    }

    @Caption
</button>



@code {
	[Parameter]
	public Style buttonStyle { get; set; }
	[Parameter]
	public Size buttonSize { get; set; }
	[Parameter]
	public ButtonType buttonType { get; set; }

	[Parameter]
	public Alignment alignment { get; set; }

}
