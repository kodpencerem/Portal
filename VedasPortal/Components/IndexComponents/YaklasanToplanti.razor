@using VedasPortal.Entities.Models.ToplantiTakvimi
@using VedasPortal.Repository.Interface;


@if (Toplantilar == null)

{
    <p><em>Yükleniyor...</em></p> }

else
{
    <CardComponent cardStyle="Style.warning">
        <CardHeader>
            Yaklaşan Toplantılar
        </CardHeader>
        <CardBody>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>Toplantı Adı</th>
                        <th>Tarih</th>
                        <th></th>
                    </tr>
                    @foreach (var toplanti in Toplantilar.Where(y => y.BaslangicTarihi > DateTime.Now.AddDays(2)).Take(3))
                    {
                        <tr>
                            <td>@toplanti.Baslik</td>
                            <td>@toplanti.BaslangicTarihi.Date.ToShortDateString()</td>
                            <td>
                                <a href="odadetayformu/@toplanti.Id"
                                   class="btn btn-primary btn-action mr-1"
                                   data-toggle="tooltip"
                                   title="Detay">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </CardBody>
    </CardComponent>

}



@code {

    [Inject]
    public IBaseRepository<Toplanti> YaklasanToplantilar { get; set; }


    protected IEnumerable<Toplanti> Toplantilar { get; set; }

    protected IEnumerable<Toplanti> TumToplantilariGetir()
    {
        Toplantilar = YaklasanToplantilar.GetAll();

        return Toplantilar;

    }

    protected override Task OnInitializedAsync()
    {
        TumToplantilariGetir();

        return Task.CompletedTask;
    } }