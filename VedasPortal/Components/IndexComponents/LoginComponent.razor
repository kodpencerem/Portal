@using VedasPortal.Entities.Models.User
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject IJSRuntime jsRunTime

<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <CardComponent cardStyle="Style.primary">
                <CardHeader>
                    Giriş Yap
                </CardHeader>
                <CardBody>
                    <EditForm Model="@kullanici"class="needs-validation" novalidate="">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <InputText id="email"
                                       type="email"
                                       @bind-Value="@kullanici.Email"
                                       class="form-control"
                                       name="email"
                                       tabindex="1"
                                       required autofocus/>
                            <div class="invalid-feedback">
                                Lütfen Kullanıcı Email Girin:
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="d-block">
                                <label for="password" class="control-label">Şifre:</label>
                            </div>
                            <InputText id="password"
                                       type="password"
                                       @bind-Value="@kullanici.Password"
                                       class="form-control"
                                       name="password"
                                       tabindex="2"
                                       required/>
                            <div class="invalid-feedback">
                                Lütfen Şifrenizi Girin:
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit"
                                   value="Giriş Yap"
                                   class="btn btn-primary btn-lg btn-block form-control"
                                   tabindex="4" />
                        </div>
                    </EditForm>
                </CardBody>
            </CardComponent>
        </div>
    </div>
</div>

