
<CardComponent cardStyle="Style.success">
    <CardHeader >
        En Popüler Anket
    </CardHeader>
    <CardBody>
        @if (Anket == null)
        {
        <p class="text-center text-danger">Şu anda mevcut anket yok!</p>
        }
        else
        {
            <div class="row d-flex flex-row justify-content-center">
                <h3>@Anket.Adi</h3>
            </div>
            <div class="row d-flex flex-row justify-content-center">
                <p>Ankete Katılım Sayısı: @Anket.ToplamAlinanSure </p>
            </div>
        }


    </CardBody>
    <CardFotter>
        <p></p>
    </CardFotter>
</CardComponent>
