<div class="@("alert alert-" +alertIconStyle.ToString() + "alert-has-icon")">
	<div class="alert-icon">
		<i class="far fa-lightbulb"></i>
	</div>
	<div class="alert-body">
		@AlertBody
		<div class="alert-title">
			@AlertTitle
		</div>
		@Description
	</div>
</div>



@code {
	[Parameter]
	public AlertIconStyle alertIconStyle { get; set; }
	[Parameter]
	public RenderFragment Description { get; set; }

	[Parameter]
	public RenderFragment AlertBody { get; set; }

	[Parameter]
	public RenderFragment AlertTitle { get; set; }

	public enum AlertIconStyle
	{
		success,
		danger,
		secondary,
		primary,
		warning,
		dark,
		light,
		info
	}
}
